<h1>Listing microports</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @microports.each do |microport| %>
      <tr>
        <td><%= microport.content %></td>
        <td><%= microport.user_id %></td>
        <td><%= link_to 'Show', microport %></td>
        <td><%= link_to 'Edit', edit_microport_path(microport) %></td>
        <td><%= link_to 'Destroy', microport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

